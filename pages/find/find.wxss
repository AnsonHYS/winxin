}
.address{
  position: relative;
  display: block;
  padding: 5px 10px 5px 30px;
  font-size: 15px;
  color: rgb(168, 168, 168);
}
.address::before{
content: "✈";
position: absolute;
left: 8px;

}
.label,.count{
   display: block;
  padding: 5px 10px;
  font-size: 15px;
  color: rgb(168, 168, 168);
}
.label{
  border-bottom: 1px solid rgb(221, 218, 218);
}
.label>label{
  margin: 0 10px;
   
}
.right{
  float: right;
 
}
.count{
  border-bottom:8px solid rgb(237, 236, 238); 
  position: relative;
}
.count>label{
  line-height: 25px;
  vertical-align: top
