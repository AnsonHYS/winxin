.icon{
  display: flex;
  flex-direction: row;
  padding: 15px;
  
}

.iconImg{
  
width:80px;
height:80px;
border-radius:50%;

}
.account{
  width: 70%;
  padding: 5px;
  padding-left: 15px;
   
}
.account>text{
display: block;
font-size: 14px;
color: rgb(138, 137, 137);
}
.name{
  font-size: 18px!important;
  color: black!important;
  padding-bottom: 5px;
}
.blog{
line-height:80px;
color:rgb(0, 0, 0);
font-weight: bold;
}


.data{
  border-top:1px solid rgb(240, 239, 239); 
    display: flex;
  flex-direction: row;
}
.nav-item{
  width: 25%;
  text-align: center;
  padding: 10px 0;
  font-size: 18px;
}
.tiptxt{
   font-size: 12px;
   color: #979696;
}
.hr{
  height: 9px;
  background-color: #ccc;
  margin-top: 10px;
  opacity: 0.2;
}

.li-item{
  position: relative;
  height: 50px;
  font-size: 16px;
  line-height: 25px;
  box-sizing: border-box;
  padding: 5px 15px;
  vertical-align: top;
  border-bottom: 1px solid rgb(235, 235, 235);
}
.li-item::after{
  position: absolute;
    right: 15px;
    top: 18px;
    width: 0;
    height: 0;
    content: "";
    border-width: 6px 0px 6px 6px;
    border-style: solid;
    border-color: transparent rgb(180, 178, 178)  ;
    
}
.li-item image{
  width:25px;
height:25px;
 
margin: 7px;
display: inline-block;
vertical-align: top;
}
.li-item text{
  margin-left: 5px;
  display: inline-block;
  line-height:40px;
  vertical-align: top;
  color: rgb(59, 59, 59);


}