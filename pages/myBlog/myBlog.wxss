.bg{
  display:block;
width:100%;
height:190px;

}
.iconDiv,.name,.cnt{
display: block;
text-align: center;
font-size: 19px;
}
.icon{
width:100px;
height:100px;
border-radius:50%;
display: inline-block;
margin:-80px auto 10px auto; 
border: 2px solid white;
}
.cnt>label{
font-size: 15px;
margin: 5px 15px;
color: rgb(175, 175, 175);
}
.hr{
  height: 9px;
  background-color: #ccc;
  margin-top: 10px;
  opacity: 0.2;
}
.title{
  display: flex;
  flex-direction: row;
  padding: 10px;
}
.ic{
  
  width: 35px;
  height: 35px;
  border-radius: 50%;
}
.user{
width: 65%;
font-size: 18px;
color: rgb(82, 82, 82);
line-height: 35px;
padding-left: 10px;
}
.date{
  width: 25%;
  font-size: 14px;
  color: rgb(172, 172, 172);
  line-height: 35px;
}
.live{
  display: block;
  width: 100%;
}
.address{
  position: relative;
  display: block;
  padding: 5px 10px 5px 30px;
  font-size: 15px;
  color: rgb(168, 168, 168);
}
.address::before{
content: "âœˆ";
position: absolute;
left: 8px;

}
.label,.count{
   display: block;
  padding: 5px 10px;
  font-size: 15px;
  color: rgb(168, 168, 168);
}
.label{
  border-bottom: 1px solid rgb(221, 218, 218);
}
.label>label{
  margin: 0 10px;
}
.right{
  float: right;
 
}
.count{
  border-bottom:8px solid rgb(237, 236, 238); 
}

